#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

{{ if ne .chezmoi.osRelease.id "ubuntu" }}
exit
{{ end }}

{{ if eq .machine "work" }}
sudo add-apt-repository -y ppa:dotnet/backports

sudo apt update 
sudo apt upgrade -y
sudo apt install -y dotnet-sdk-9.0

{{ range .packages.work.dotnet }}
dotnet tool install -g {{ . }}
{{ end }}
{{ end }}
